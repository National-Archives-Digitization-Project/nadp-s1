<%- include('./layouts/header.ejs') %>
<div class="container-scroller">
  <div class="container-fluid page-body-wrapper full-page-wrapper">
    <div class="content-wrapper d-flex align-items-center auth px-0">
      <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
          <div class="auth-form-light text-center py-5 px-4 px-sm-5">
            <div class="brand-logo">
              <img src="images/logo.svg" alt="National Archives" />
            </div>
            <h4>National Archives, <strong>Enugu</strong></h4>
            <h6 class="font-weight-light">Sign in to continue.</h6>
            <form class="pt-3" action="/login/form" enctype="application/x-www-form-urlencoded" method="post">
              <div class="form-group">
                <input
                  type="text"
                  required
                  aria-required="true"
                  class="form-control form-control-lg"
                  id="staffNumber"
                  name="staffNumber"
                  placeholder="Staff Number"
                />
              </div>
              <div class="form-group">
                <input
                  type="password"
                  required
                  aria-required="true"
                  class="form-control form-control-lg"
                  name="password"
                  id="password"
                  placeholder="Password"
                />
              </div>
              <div class="mt-3">
                <button
                  class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn"
                  type="submit"
                >
                  SIGN IN
                </button>
              </div>
              <div
                class="my-2 d-flex justify-content-between align-items-center"
              >
                <div class="form-check">
                  <label class="form-check-label text-muted">
                    <input type="checkbox" class="form-check-input" />
                    Keep me signed in
                  </label>
                </div>
                <span class="text-right">
                  <% if(isConnected){ %>
                  <span class="font-weight-medium text-success">Database Ready</span>
                  <% }else{ %>
                  <span class="font-weight-medium text-danger">Database Failed</span>
                  <% } %>
              </div>

              <div class="text-center mt-4 font-weight-light">
                Don't have an account?
                <a href="#" class="text-primary">Create</a><br />
                <em>Powered by De-Golojan Technologies Ltd.</em>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- content-wrapper ends -->
  </div>
  <!-- page-body-wrapper ends -->
</div>
<%- include('./layouts/footer.ejs') %>
